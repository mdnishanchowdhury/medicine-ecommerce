model Order {
    id         String @id @default(uuid())
    customerId String

    status          OrderStatus @default(PLACED)
    totalAmount     Float
    shippingAddress String
    phoneNumber     String
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
    orderItems      OrderItem[]

    @@index([customerId])
}

enum OrderStatus {
    PLACED
    PROCESSING
    SHIPPED
    DELIVERED
    CANCELLED
}
